<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.koreait.board.mappers.BoardMapper">
    <insert id="register" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO BOARD (title, content, writer_id)
        VALUES (#{title}, #{content}, #{writerId})
    </insert>

    <select id="getList">
        SELECT * FROM BOARD
        <where>
            <if test="skey != null">
                <bind name="_skey" value="'%' + _parameter.getSkey() + '%'" />
                <if test="sopt == 'title'">
                    title LIKE #{_skey}
                </if>
                <if test="sopt == 'content'">
                    content LIKE #{_skey}
                </if>
                <if test="sopt == null">
                    CONCAT(title, content) LIKE #{_skey}
                </if>
            </if>
        </where>
        ORDER BY id DESC LIMIT #{offset}, #{limit};
    </select>

    <select id="get">
        SELECT * FROM BOARD WHERE id=#{id}
    </select>

    <update id="updateBoard" parameterType="org.koreait.board.controllers.JoinForm">
        UPDATE board
        SET email = #{email}, name = #{name}, password = #{password}
        WHERE id = #{id}
    </update>

